{
  "info": {
    "name": "Pinmate Production API - Complete Collection",
    "description": "Complete API collection for testing all onboarding and auth endpoints on Render production server",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Guest Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-app-mode",
            "value": "prod"
          },
          {
            "key": "x-device-id",
            "value": "{{device_id}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"lat\": \"28.6139\",\n  \"long\": \"77.2090\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/login/guest/",
          "host": ["{{base_url}}"],
          "path": ["login", "guest", ""]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Guest user created\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.tokens).to.exist;",
              "    pm.collectionVariables.set(\"guest_access_token\", jsonData.tokens.access);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "2. Signup - PROD (debug=true)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-app-mode",
            "value": "prod"
          },
          {
            "key": "x-device-id",
            "value": "{{device_id}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email_id\": \"testuser_{{$timestamp}}@example.com\",\n  \"password\": \"Pass123!\",\n  \"lat\": \"28.6139\",\n  \"long\": \"77.2090\",\n  \"interests\": [\"technology\", \"sports\"],\n  \"debug\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/signup/",
          "host": ["{{base_url}}"],
          "path": ["auth", "signup", ""]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"User created (debug mode)\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.show_otp).to.eql(false);",
              "    pm.expect(jsonData.tokens).to.exist;",
              "    pm.collectionVariables.set(\"user_access_token\", jsonData.tokens.access);",
              "    pm.collectionVariables.set(\"user_id\", jsonData.user.userId);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
