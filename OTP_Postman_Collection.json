{
  "info": {
    "name": "OTP Test Collection - All 4 Modes",
    "description": "Postman collection for testing all OTP mode combinations: prod/staging Ã— debug true/false",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "TEST 1: PROD + debug=false (Real OTP, Email Sent)",
      "item": [
        {
          "name": "Signup - PROD debug=false",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-app-mode",
                "value": "prod"
              },
              {
                "key": "x-device-id",
                "value": "postman-test1-prod-nodebug"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email_id\": \"prod_nodebug_postman@example.com\",\n  \"password\": \"Pass123!\",\n  \"lat\": \"28.6139\",\n  \"long\": \"77.2090\",\n  \"interests\": [1],\n  \"debug\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "signup",
                ""
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has show_otp=true\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.show_otp).to.eql(true);",
                  "});",
                  "",
                  "pm.test(\"Message indicates OTP sent\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.message).to.contain(\"OTP sent\");",
                  "});",
                  "",
                  "pm.test(\"Response has identifier\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.identifier).to.exist;",
                  "    pm.collectionVariables.set(\"test1_identifier\", jsonData.identifier);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Verify OTP - PROD debug=false",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
